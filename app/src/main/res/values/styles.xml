<resources xmlns:tools="http://schemas.android.com/tools">
   <style name="ButtonBorder" parent="Widget.AppCompat.Light.ActionButton">
       <item name="android:background">@drawable/button_round_border</item>
       <item name="android:textAlignment">center</item>
       <item name="android:fontFamily">@font/roboto</item>
       <item name="android:textSize">16sp</item>
       <item name="android:textColor">@color/primaryColor</item>
   </style>
    <style name="Button" parent="Widget.AppCompat.Light.ActionButton">
       <item name="android:background">@drawable/button_round</item>
       <item name="android:textAlignment">center</item>
       <item name="android:fontFamily">@font/roboto</item>
       <item name="android:textSize">16sp</item>
       <item name="android:textColor">@color/white</item>
   </style>
    <style name="EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="disableButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_style_disabled</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:width">100dp</item>
    </style>

    <style name="circleButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_style_circle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:tint">@color/white</item>
        <item name="android:width">64dp</item>
        <item name="android:height">64dp</item>
    </style>


</resources>